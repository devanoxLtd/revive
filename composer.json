{
    "name": "devanox/laravel-revive",
    "description": "Automatic configuration for Laravel apps to apply Devanox's standard linting & code standards.",
    "keywords": [
        "devanox",
        "revive",
        "php",
        "code style",
        "laravel"
    ],
    "homepage": "https://github.com/devanoxLtd/laravel-revive",
    "type": "project",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/devanoxLtd/laravel-revive/issues",
        "source": "https://github.com/devanoxLtd/laravel-revive"
    },
    "authors": [
        {
            "name": "Chetan",
            "email": "contact@mrchetan.com",
            "homepage": "https://mrchetan.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^v3.20",
        "laravel-zero/framework": "^v10.1",
        "laravel/pint": "^v1.10",
        "mrchetan/php_standard": "^3.2",
        "nunomaduro/larastan": "^2.6",
        "nunomaduro/termwind": "^v1.15",
        "spatie/invade": "^1.1",
        "squizlabs/php_codesniffer": "^3.7",
        "tightenco/tlint": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        },
        "files": [
            "./vendor/squizlabs/php_codesniffer/autoload.php"
        ]
    },
    "config": {
        "preferred-install": {
            "laravel/pint": "source",
            "*": "dist"
        },
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        },
        "platform": {
            "php": "8.1.0"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": ["builds/revive"]
}
